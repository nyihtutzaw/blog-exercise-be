{
  "name": "blog-be",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "tsup src/index.ts --format cjs --watch --onSuccess \"node -r dotenv/config dist/index.js\"",
    "build": "tsup src/index.ts --format cjs",
    "start": "node dist/index.js",
    "db:migrate": "npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:seed": "npx prisma db seed",
    "tsc": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "precommit": "lint-staged",
    "format:fix": "npx prettier --write \"**/*.{ts,tsx}\"",
    "format:check": "npx prettier --check \"**/*.{ts,tsx}\"",
    "preinstall": "npx husky install"
  },
  "prisma": {
    "seed": "npx ts-node prisma/seed"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@prisma/client": "^5.12.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "express": "^4.19.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.12.1",
    "redis": "^4.6.13",
    "strip-ansi": "^7.1.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "tsup": "^8.0.1"
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx}": [
      "npm run format:fix",
      "npm run lint"
    ]
  }
}
